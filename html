    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var leftColumn = document.getElementById('left-column');
            var rightColumn = document.querySelector('.right');
            var profileIcon = document.getElementById('profile-icon');
            var menu = document.getElementById('menu');
            var menuToggle = document.querySelector('.menu-toggle');

            profileIcon.addEventListener('click', function() {
                if (leftColumn.classList.contains('hidden')) {
                    leftColumn.classList.remove('hidden'); // Sol sütunu tekrar aç
                    leftColumn.classList.remove('small');
                    rightColumn.classList.remove('expanded');
                } else if (leftColumn.classList.contains('small')) {
                    leftColumn.classList.remove('small'); // Küçük sütunu kaldır ve tam boyutlu sol sütunu göster
                    rightColumn.classList.remove('expanded');
                } else {
                    leftColumn.classList.add('small'); // Sol sütunu küçült
                    rightColumn.classList.add('expanded');
                }
            });

            function toggleMenu() {
                if (menu.classList.contains('open')) {
                    menu.classList.remove('open'); // Menü kapanırken kaydır
                } else {
                    menu.classList.add('open'); // Menü açılırken kaydır
                }
            }

            menuToggle.addEventListener('click', toggleMenu);

            document.addEventListener('click', function(event) {
                if (!menu.contains(event.target) && !menuToggle.contains(event.target)) {
                    menu.classList.remove('open'); // Menü dışına tıklanınca kapat
                }
            });
        });
    </script>
